{
  "name": "wbooks",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "npx react-native run-android",
    "android:build": "cd android/ && ./gradlew clean assembleRelease",
    "android:clean": "cd android/ && ./gradlew clean",
    "ios": "npx react-native run-ios",
    "ios:clean": "cd ios/ && rm -rf build && rm -rf Pods",
    "start": "npx react-native start",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "lint-diff": "git diff --staged --name-only --relative --diff-filter=ACM | grep -E \"\\.(ts|tsx|js|jsx)$\" | xargs eslint",
    "check-types": "tsc"
  },
  "dependencies": {
    "@testing-library/jest-native": "^3.4.3",
    "@testing-library/react-native": "^7.1.0",
    "react": "17.0.1",
    "react-native": "0.64.4",
    "react-native-gesture-handler": "^1.9.0",
    "redux-mock-store": "^1.5.4",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "hermes-engine": "^0.7.2-rc1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.19",
    "@types/react-native": "^0.63.2",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-import-glob": "^2.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "7.14.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-wolox-react-native": "^1.0.1",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-react-native": "^3.8.1",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.64.0",
    "prettier": "^2.0.5",
    "prettier-eslint": "^9.0.1",
    "react-test-renderer": "17.0.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-diff && yarn run check-types"
    }
  }
}
